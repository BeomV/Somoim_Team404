<mapper namespace="test.com.moim.board">


	<insert id="B_INSERT">
		insert into somoim(num,som_title,category,max_member,create_date)
		values(seq_somoim.nextval,#{som_title},#{category},#{max_member},sysdate)
	</insert>


	<select id="Sch_SELECT_ALL"
			resultType="test.com.moim.board.model.Somoim_ScheduleVO">
		select * from somoim_schedule
	</select>

	<insert id="Sch_INSERT">
		INSERT INTO somoim_schedule(num, schedule_date, schedule_time, schedule_title, place, money,max_participant, som_member_num)
		VALUES (
				   seq_somoim_schedule.nextval,
				   #{schedule_date},
				   #{schedule_time},
				   #{schedule_title},
				   #{place},
				   #{money},
				   #{max_participant},
				   (SELECT num FROM somoim_member WHERE user_id = #{user_id})
			   )
	</insert>

